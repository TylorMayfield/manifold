{
  "name": "manifold",
  "version": "0.1.0",
  "description": "A powerful, context-agnostic desktop application for data integration and consolidation",
  "author": "Tylor Mayfield",
  "private": true,
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "dev": "concurrently \"npm run dev:next\" \"npm run dev:electron\"",
    "dev:next": "next dev --turbopack",
    "dev:electron": "wait-on http://localhost:3000 && electron .",
    "build": "next build --turbopack",
    "build:electron": "npm run build && electron-builder",
    "start": "next start",
    "dist": "npm run build && electron-builder --publish=never",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:win": "npm run build && electron-builder --win",
    "dist:linux": "npm run build && electron-builder --linux",
    "electron": "electron .",
    "type-check": "tsc --noEmit",
    "lint": "echo 'No lint script configured' && exit 0",
    "clean": "rm -rf out dist .next",
    "clean:install": "npm run clean && npm install --legacy-peer-deps",
    "release": "node scripts/release.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:unit": "jest --selectProjects unit",
    "test:integration": "jest --selectProjects integration",
    "test:performance": "jest --selectProjects performance",
    "test:accessibility": "jest --selectProjects accessibility",
    "test:e2e": "jest --selectProjects e2e",
    "test:database": "jest --selectProjects database",
    "test:services": "jest --selectProjects services",
    "test:all": "jest --projects __tests__/config/test-environments.ts",
    "test:full": "jest --projects __tests__/config/test-environments.ts --coverage --ci",
    "test:dev": "jest --watch --projects __tests__/config/test-environments.ts",
    "test:production": "jest --projects __tests__/config/test-environments.ts --coverage --ci --maxWorkers=4",
    "test:quick": "node scripts/test-runner.js quick",
    "test:full-script": "node scripts/test-runner.js full",
    "test:prod": "node scripts/test-runner.js production",
    "test:analyze": "node __tests__/utils/test-analyzer.ts",
    "test:workflows": "node __tests__/test-runner.js --workflows",
    "test:ui-workflows": "node __tests__/test-runner.js --workflows",
    "test:visual": "node __tests__/test-runner.js --visual",
    "test:cross-browser": "node __tests__/test-runner.js --cross-browser",
    "test:mobile": "node __tests__/test-runner.js --mobile",
    "test:comprehensive": "node __tests__/test-runner.js",
    "test:cleanup": "node __tests__/test-runner.js --cleanup",
    "test:playwright": "playwright test",
    "test:playwright:ui": "playwright test --ui",
    "test:playwright:headed": "playwright test --headed",
    "test:playwright:debug": "playwright test --debug",
    "test:playwright:chromium": "playwright test --project=chromium",
    "test:playwright:firefox": "playwright test --project=firefox",
    "test:playwright:webkit": "playwright test --project=webkit",
    "test:playwright:report": "playwright show-report",
    "db:generate": "prisma generate",
    "db:generate:project": "prisma generate --schema=prisma/project-schema.prisma",
    "db:migrate": "prisma migrate dev",
    "db:migrate:project": "prisma migrate dev --schema=prisma/project-schema.prisma",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset",
    "db:deploy": "prisma migrate deploy"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.490.0",
    "@aws-sdk/s3-request-presigner": "^3.490.0",
    "@monaco-editor/react": "^4.6.0",
    "@prisma/client": "^6.16.2",
    "autoprefixer": "^10.4.21",
    "axios": "^1.6.0",
    "better-sqlite3": "^12.4.1",
    "clsx": "^2.1.1",
    "csv-parser": "^3.0.0",
    "csv-stringify": "^6.4.4",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.2",
    "lucide-react": "^0.460.0",
    "monaco-editor": "^0.45.0",
    "next": "15.5.3",
    "node-cron": "^3.0.3",
    "papaparse": "^5.5.3",
    "postcss": "^8.5.6",
    "prisma": "^6.16.2",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-dropzone": "^14.2.3",
    "react-is": "^19.1.1",
    "reactflow": "^11.10.1",
    "recharts": "^3.2.0",
    "tailwindcss": "^3.4.17",
    "uuid": "^9.0.1",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@playwright/experimental-ct-react": "^1.55.1",
    "@playwright/test": "^1.55.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/node-cron": "^3.0.11",
    "@types/papaparse": "^5.3.16",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/uuid": "^9.0.7",
    "concurrently": "^8.2.2",
    "electron": "^28.3.3",
    "electron-builder": "^24.6.4",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "stylelint": "^16.24.0",
    "stylelint-config-standard": "^39.0.0",
    "stylelint-config-tailwindcss": "^1.0.0",
    "typescript": "^5",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.manifold.app",
    "productName": "Manifold",
    "icon": "icon.png",
    "directories": {
      "output": "dist"
    },
    "files": [
      ".next/**/*",
      "out/**/*",
      "public/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "asarUnpack": [
      "node_modules/better-sqlite3/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": "nsis",
      "sign": null,
      "verifyUpdateCodeSignature": false
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
