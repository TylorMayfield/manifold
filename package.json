{
  "name": "lorsync",
  "version": "0.1.0",
  "description": "A powerful, context-agnostic desktop application for data integration and consolidation",
  "author": "Tylor Mayfield",
  "private": true,
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "dev": "concurrently \"npm run dev:next\" \"npm run dev:electron\"",
    "dev:next": "next dev",
    "dev:electron": "wait-on http://localhost:3000 && electron .",
    "build": "next build",
    "build:standalone": "next build && node scripts/prepare-standalone.js",
    "build:electron": "npm run build:standalone && electron-builder",
    "start": "next start",
    "dist": "npm run build:standalone && electron-builder --publish=never",
    "dist:mac": "npm run build:standalone && electron-builder --mac",
    "dist:win": "npm run build:standalone && electron-builder --win",
    "dist:linux": "npm run build:standalone && electron-builder --linux",
    "electron": "electron .",
    "type-check": "tsc --noEmit",
    "lint": "echo 'No lint script configured' && exit 0",
    "clean": "rm -rf out dist .next",
    "clean:install": "npm run clean && npm install --legacy-peer-deps",
    "release": "node scripts/release.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.918.0",
    "@aws-sdk/s3-request-presigner": "^3.490.0",
    "@monaco-editor/react": "^4.6.0",
    "autoprefixer": "^10.4.21",
    "axios": "^1.6.0",
    "basic-ftp": "^5.0.5",
    "better-sqlite3": "^12.4.1",
    "clsx": "^2.1.1",
    "csv-parser": "^3.0.0",
    "csv-stringify": "^6.4.4",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.2",
    "lucide-react": "^0.460.0",
    "monaco-editor": "^0.45.0",
    "mongodb": "^6.3.0",
    "mongoose": "^8.1.0",
    "mssql": "^12.0.0",
    "mysql2": "^3.15.2",
    "next": "15.5.3",
    "node-cron": "^3.0.3",
    "oracledb": "^6.10.0",
    "papaparse": "^5.5.3",
    "pg": "^8.16.3",
    "postcss": "^8.5.6",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-dropzone": "^14.2.3",
    "react-is": "^19.1.1",
    "reactflow": "^11.10.1",
    "recharts": "^3.2.0",
    "sharp": "^0.34.4",
    "sqlite3": "^5.1.7",
    "ssh2-sftp-client": "^12.0.1",
    "tailwindcss": "^3.4.17",
    "uuid": "^9.0.1",
    "xlsx": "^0.18.5",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@playwright/experimental-ct-react": "^1.55.1",
    "@playwright/test": "^1.55.1",
    "@swc/core": "^1.13.5",
    "@swc/jest": "^0.2.39",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/node-cron": "^3.0.11",
    "@types/papaparse": "^5.3.16",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/uuid": "^9.0.7",
    "@types/xlsx": "^0.0.35",
    "concurrently": "^8.2.2",
    "electron": "^38.2.2",
    "electron-builder": "^24.6.4",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "stylelint": "^16.24.0",
    "stylelint-config-standard": "^39.0.0",
    "stylelint-config-tailwindcss": "^1.0.0",
    "typescript": "^5",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.lorsync.app",
    "productName": "LorSync",
    "icon": "icon.png",
    "directories": {
      "output": "dist",
      "buildResources": "public"
    },
    "files": [
      ".next/standalone/**/*",
      ".next/static/**/*",
      "public/**/*",
      "package.json",
      "data/database-config.json"
    ],
    "extraResources": [
      {
        "from": ".next/standalone",
        "to": "app/.next/standalone",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": ".next/static",
        "to": "app/.next/standalone/.next/static",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "public",
        "to": "app/.next/standalone/public",
        "filter": [
          "**/*"
        ]
      }
    ],
    "asarUnpack": [
      "**/*.node"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "sign": null,
      "verifyUpdateCodeSignature": false
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Development"
    }
  }
}
